CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:%.c=%.o)
NAME = school

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

clean:
	-@$(RM) $(NAME) *~ \#*\#

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c m.h
	$(CC) -c $< -o $@ -Wall -Werror -Wextra -pedantic
